<Window x:Class="client.Views.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:client.Views"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800"
        xmlns:vm="clr-namespace:client.ViewModels"
        xmlns:conv="clr-namespace:client.Converters">
    <Window.Resources>
        <conv:BoolToVisibilityConverter x:Key="BoolToVis"/>
        <conv:BoolToVisibilityConverter x:Key="BoolToVisReverse" Inverted="True"/>
        <conv:BoolToStringConverter x:Key="BoolToText"/>
    </Window.Resources>

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="0.1*"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <Grid Grid.Row="0" Background="#f0f0f0">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="Auto"/>
            </Grid.ColumnDefinitions>

            <TextBlock Grid.Column="0" Text="Хост:" VerticalAlignment="Center" Margin="5"/>
            <TextBox Grid.Column="1" Text="{Binding Host}" Margin="5" VerticalContentAlignment="Center"/>

            <TextBlock Grid.Column="2" Text="Порт:" VerticalAlignment="Center" Margin="5"/>
            <TextBox Grid.Column="3" Text="{Binding Port, StringFormat={}{0:0}}" Width="60" VerticalContentAlignment="Center"/>

            <Button Grid.Column="4"
                    Content="{Binding IsConnected, Converter={StaticResource BoolToText}}"
                    Command="{Binding ToggleConnectionCommand}"
                    Margin="5" Padding="10,4"/>
        </Grid>

        <Grid Grid.Row="1">
            <Grid.RowDefinitions>
                <RowDefinition Height="*"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <ScrollViewer VerticalScrollBarVisibility="Auto"
                          HorizontalScrollBarVisibility="Disabled"
                          Padding="10">
                <ItemsControl ItemsSource="{Binding Messages}">
                    <ItemsControl.ItemTemplate>
                        <DataTemplate>
                            <Grid Margin="0,2">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="Auto"/>
                                    <ColumnDefinition Width="*"/>
                                </Grid.ColumnDefinitions>

                                <Border Grid.Column="0"
                                        Background="#e6e6e6"
                                        CornerRadius="12"
                                        Padding="12,8"
                                        HorizontalAlignment="Left"
                                        MaxWidth="300"
                                        Visibility="{Binding IsOwnMessage, Converter={StaticResource BoolToVisReverse}}">
                                    <TextBlock Text="{Binding Text}"
                                               TextWrapping="Wrap"
                                               Foreground="#202020"
                                               FontSize="14"/>
                                </Border>

                                <Border Grid.Column="2"
                                        Background="#0078d4"
                                        CornerRadius="12"
                                        Padding="12,8"
                                        HorizontalAlignment="Right"
                                        MaxWidth="300"
                                        Visibility="{Binding IsOwnMessage, Converter={StaticResource BoolToVis}}">
                                    <TextBlock Text="{Binding Text}"
                                               TextWrapping="Wrap"
                                               Foreground="White"
                                               FontSize="14"/>
                                </Border>
                            </Grid>
                        </DataTemplate>
                    </ItemsControl.ItemTemplate>
                </ItemsControl>
            </ScrollViewer>

            <Grid Grid.Row="1"
                  MinHeight="30"
                  Margin="5">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <TextBox Grid.Column="0" 
                         MaxLines="5"
                         VerticalAlignment="Stretch"
                         Margin="0,0,5,0"
                         VerticalScrollBarVisibility="Auto"
                         AcceptsReturn="True"
                         Text="{Binding Text}"
                         VerticalContentAlignment="Center">
                </TextBox>

                <Button Grid.Column="1"
                        VerticalAlignment="Center"
                        HorizontalAlignment="Center"
                        Width="32"
                        Height="32"
                        Padding="0"
                        HorizontalContentAlignment="Center"
                        VerticalContentAlignment="Center"
                        Command="{Binding SendMessageCommand}"
                        Background="Transparent"
                        BorderBrush="Transparent">
                    <Image Source="/Icons/send-message.png"
                           Stretch="Uniform"
                           Width="32"
                           Height="32"/>
                </Button>
            </Grid>
        </Grid>        
    </Grid>
</Window>
