<Window x:Class="client.Views.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:vm="clr-namespace:client.ViewModels"
        xmlns:conv="clr-namespace:client.Converters"
        mc:Ignorable="d"
        Title="Мессенджер" Height="600" Width="1000">

    <Window.Resources>
        <conv:BoolToVisibilityConverter x:Key="BoolToVis"/>
        <conv:BoolToVisibilityConverter x:Key="BoolToVisReverse" Inverted="True"/>
        <conv:NullToVisibilityConverter x:Key="NullToVis"/>
        <conv:BoolToColorConverter x:Key="BoolToColorConverter"/>
        <conv:BoolToStringConverter x:Key="BoolToStringConverter"/>
    </Window.Resources>

    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="220"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <Border Grid.Column="0" Background="#f8f8f8" Padding="10">
            <DockPanel>
                <Button Content="Добавить чат"
                        Command="{Binding AddChatCommand}"
                        DockPanel.Dock="Top" Margin="0,0,0,10" Height="30"/>
                <ListBox ItemsSource="{Binding Chats}" SelectedItem="{Binding SelectedChat}">
                    <ListBox.ItemTemplate>
                        <DataTemplate>
                            <StackPanel Orientation="Horizontal">
                                <Ellipse Width="8" Height="8" Margin="0,0,6,0"
                                         Fill="{Binding IsConnected, Converter={StaticResource BoolToColorConverter}}"/>
                                <TextBlock Text="{Binding Name}" VerticalAlignment="Center"/>
                            </StackPanel>
                        </DataTemplate>
                    </ListBox.ItemTemplate>
                </ListBox>
            </DockPanel>
        </Border>

        <Grid Grid.Column="1">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <Grid Grid.Row="0" Background="#f0f0f0">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <TextBlock Grid.Column="0" Text="Хост:" VerticalAlignment="Center" Margin="5"/>
                <TextBox Grid.Column="1" Text="{Binding SelectedChat.Host, FallbackValue='127.0.0.1'}" Margin="5" VerticalContentAlignment="Center"/>

                <TextBlock Grid.Column="2" Text="Порт:" VerticalAlignment="Center" Margin="5"/>
                <TextBox Grid.Column="3" Text="{Binding SelectedChat.Port, StringFormat={}{0:0}, FallbackValue=8080}" Width="60" VerticalContentAlignment="Center"/>

                <TextBlock Grid.Column="4" Text="Ник:" VerticalAlignment="Center" Margin="5"/>
                <TextBox Grid.Column="5" Text="{Binding SelectedChat.UserName}" Margin="5" VerticalContentAlignment="Center"/>

                <Button Grid.Column="6"
                        Content="{Binding SelectedChat.IsConnected, Converter={StaticResource BoolToStringConverter}}"
                        Command="{Binding ToggleConnectionCommand}"
                        Margin="5" Padding="10,4"
                        Visibility="{Binding SelectedChat, Converter={StaticResource NullToVis}}"/>
            </Grid>

            <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto"
                          HorizontalScrollBarVisibility="Disabled"
                          Padding="10">
                <ItemsControl ItemsSource="{Binding CurrentMessages}">
                    <ItemsControl.ItemTemplate>
                        <DataTemplate>
                            <Grid Margin="0,4">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="Auto"/>
                                    <ColumnDefinition Width="*"/>
                                </Grid.ColumnDefinitions>

                                <StackPanel Grid.Column="0"
                                            HorizontalAlignment="Left"
                                            MaxWidth="300"
                                            Visibility="{Binding IsOwnMessage, Converter={StaticResource BoolToVisReverse}}">
                                    <TextBlock Text="{Binding Author}"
                                               Foreground="#666666"
                                               FontSize="12"
                                               Margin="0,0,0,2"/>
                                    <Border Background="#e6e6e6"
                                            CornerRadius="12"
                                            Padding="12,8">
                                        <TextBlock Text="{Binding Text}"
                                                   TextWrapping="Wrap"
                                                   Foreground="#202020"
                                                   FontSize="14"/>
                                    </Border>
                                    <TextBlock Text="{Binding Time, StringFormat='HH:mm'}"
                                               Foreground="#999999"
                                               FontSize="11"
                                               HorizontalAlignment="Right"
                                               Margin="0,2,0,0"/>
                                </StackPanel>

                                <StackPanel Grid.Column="2"
                                            HorizontalAlignment="Right"
                                            MaxWidth="300"
                                            Visibility="{Binding IsOwnMessage, Converter={StaticResource BoolToVis}}">
                                    <Border Background="#0078d4"
                                            CornerRadius="12"
                                            Padding="12,8">
                                        <TextBlock Text="{Binding Text}"
                                                   TextWrapping="Wrap"
                                                   Foreground="White"
                                                   FontSize="14"/>
                                    </Border>
                                    <TextBlock Text="{Binding Time, StringFormat='HH:mm'}"
                                               Foreground="#aaaaaa"
                                               FontSize="11"
                                               HorizontalAlignment="Right"
                                               Margin="0,2,0,0"/>
                                </StackPanel>
                            </Grid>
                        </DataTemplate>
                    </ItemsControl.ItemTemplate>
                </ItemsControl>
            </ScrollViewer>

            <Grid Grid.Row="2"
                  MinHeight="30"
                  Margin="10">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <TextBox Grid.Column="0" 
                         MaxLines="5"
                         VerticalAlignment="Stretch"
                         Margin="0,0,5,0"
                         VerticalScrollBarVisibility="Auto"
                         AcceptsReturn="True"
                         Text="{Binding InputText}"
                         VerticalContentAlignment="Center">
                </TextBox>

                <Button Grid.Column="1"
                        VerticalAlignment="Center"
                        Width="32"
                        Height="32"
                        Padding="0"
                        Command="{Binding SendMessageCommand}"
                        Background="Transparent"
                        BorderBrush="Transparent">
                    <Image Source="/Icons/send-message.png"
                           Stretch="Uniform"
                           Width="32"
                           Height="32"/>
                </Button>
            </Grid>
        </Grid>
    </Grid>
</Window>